 EXE> SPACEINPUT
    CENTRX= #{CENTX}  CENTRY= #{CENTY}  CENTRZ= #{CENTZ}
    LXCELL= #{CELLX}  LYCELL= #{CELLY}  LZCELL= #{CELLZ}
    DXCELL= 2  DYCELL= 2  DZCELL= 2
    QUIT

 EXE> GPU
    GPUALC= MPI
    USEDEV= 0,1,2,3
    GPUPRC= 1
    NBDSRV= GPU
    NBDKNL= GRID
    NBDBSP= NOCA
    GRDSPC= 6d0
    GRDSCL= 1.1d0
    QUIT

 EXE> INPUT
     TOPOLO= FORM  NAMETO= #{TOPOLOGY}
     COORDI= PDB   NAMECO= #{PDB}
     SETSHA= NORE  NAMESH= #{SHK}
     REFCOO= PDB   NAMERE= #{PDB}
     POSITI= READ  NAMEPO= ./templates/posres.inp
     QUIT

 EXE> MD
     LOOPLI= 1000000  SETTIM= 9999999999  CPUTIM= 9999999999
     UPDATE= 10       TIMEST= 0.5d0 ; time step of MD (fs).
     OUTLOG= 1000     LOGFOR= DETA
     STOPCE= BOTH    

;ensemble and integration
     METHOD= NPT      BAROST= BERE
     INTEGR= VELO
     MODIFI= ISOT     RELAXA= 50.0d0  
     COUPHB= 50.0d0   COUPPI= 2000.0d0
     SETPRE= 1.0d0

; temperature
     SETTEM= #{TEMP}  TEMPCO= YES  
     INITIA= SET      STARTT= #{TEMP} 

; restart 
     RESTAR= YES      OUTRSL= 1000 
     NAMERI= nvt_eq.rst
     NAMERO= npt_eq.rst

     MNTRCO= NO   ;OUTCOO= 99999999
     ;NAMECO= npt_eq.cod

     CALZMM= ZDIP
     CUTLEN= 12.0D0  DIEFUN= CONS
     DIEVAL= 1.0D0   EWAPRM= 0.0D0
     CALHYD= NOCALC  CALV5N= NOCALC
     CALE5N= NOCALC  CALH5N= NOCALC
     BOUNDA= PERI    SETCEN= NO
     CENTRX= #{CENTX}  CENTRY= #{CENTY}  CENTRZ= #{CENTZ}
     LXCELL= #{CELLX}  LYCELL= #{CELLY}  LZCELL= #{CELLZ}

     CALPSR= CALC  WETPSR= 1.0
     QUIT

EXE> OUTPUT
     COORDI= PDB          NAMECO= npt_eq.pdb
     QUIT
EXE> END
